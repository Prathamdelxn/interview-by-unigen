{
  "compilerOptions": {
    "allowJs": true,          // Allow JavaScript files
    "checkJs": false,         // Disable type-checking for JavaScript
    "jsx": "react",           // Enable JSX support for React
    "paths": {
      "@/*": ["./*"]          // Path alias
    }
  },
  "include": ["src/**/*"],    // Include all files under 'src' directory
  "exclude": ["node_modules"] // Exclude node_modules from processing
}
